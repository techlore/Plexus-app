<resources>

    <!--Splash theme-->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/grey_900</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <!--#########################################################################################-->

    <!--App theme-->
    <style name="AppTheme" parent="Theme.Material3Expressive.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_onPrimary</item>
        <item name="colorPrimaryContainer">@color/color_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/color_onPrimaryContainer</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_onSecondary</item>
        <item name="colorSecondaryContainer">@color/color_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/color_onSecondaryContainer</item>
        <item name="colorTertiary">@color/color_tertiary</item>
        <item name="colorOnTertiary">@color/color_onTertiary</item>
        <item name="colorTertiaryContainer">@color/color_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/color_onTertiaryContainer</item>
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@color/color_onError</item>
        <item name="colorErrorContainer">@color/color_errorContainer</item>
        <item name="colorOnErrorContainer">@color/color_onErrorContainer</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorOnBackground">@color/color_onBackground</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_onSurface</item>
        <item name="colorSurfaceVariant">@color/color_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/color_onSurfaceVariant</item>
        <item name="colorOutline">@color/color_outline</item>
        <item name="colorOutlineVariant">@color/color_outlineVariant</item>
        <item name="colorSurfaceInverse">@color/color_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/color_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/color_inversePrimary</item>
        <item name="colorPrimaryFixed">@color/color_primaryFixed</item>
        <item name="colorOnPrimaryFixed">@color/color_onPrimaryFixed</item>
        <item name="colorPrimaryFixedDim">@color/color_primaryFixedDim</item>
        <item name="colorOnPrimaryFixedVariant">@color/color_onPrimaryFixedVariant</item>
        <item name="colorSecondaryFixed">@color/color_secondaryFixed</item>
        <item name="colorOnSecondaryFixed">@color/color_onSecondaryFixed</item>
        <item name="colorSecondaryFixedDim">@color/color_secondaryFixedDim</item>
        <item name="colorOnSecondaryFixedVariant">@color/color_onSecondaryFixedVariant</item>
        <item name="colorTertiaryFixed">@color/color_tertiaryFixed</item>
        <item name="colorOnTertiaryFixed">@color/color_onTertiaryFixed</item>
        <item name="colorTertiaryFixedDim">@color/color_tertiaryFixedDim</item>
        <item name="colorOnTertiaryFixedVariant">@color/color_onTertiaryFixedVariant</item>
        <item name="colorSurfaceDim">@color/color_surfaceDim</item>
        <item name="colorSurfaceBright">@color/color_surfaceBright</item>
        <item name="colorSurfaceContainerLowest">@color/color_surfaceContainerLowest</item>
        <item name="colorSurfaceContainerLow">@color/color_surfaceContainerLow</item>
        <item name="colorSurfaceContainer">@color/color_surfaceContainer</item>
        <item name="colorSurfaceContainerHigh">@color/color_surfaceContainerHigh</item>
        <item name="colorSurfaceContainerHighest">@color/color_surfaceContainerHighest</item>

        <item name="materialSwitchStyle">@style/SwitchStyle</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextStyle</item>
    </style>

    <!--#########################################################################################-->

    <!--Filter chips theme-->
    <style name="NotTestedFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/chip_bg_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:text">@string/na</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="BrokenFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/color_broken_status</item>
        <item name="android:text">@string/broken_title</item>
        <item name="android:textColor">@color/color_broken_status_text</item>
    </style>

    <style name="BronzeFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/color_bronze_status</item>
        <item name="android:text">@string/bronze_title</item>
        <item name="android:textColor">@color/color_bronze_status_text</item>
    </style>

    <style name="SilverFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/color_silver_status</item>
        <item name="android:text">@string/silver_title</item>
        <item name="android:textColor">@color/color_silver_status_text</item>
    </style>

    <style name="GoldFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/color_gold_status</item>
        <item name="android:text">@string/gold_title</item>
        <item name="android:textColor">@color/color_gold_status_text</item>
    </style>

    <style name="GooglePlayAltFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/color_installed_from</item>
        <item name="android:text">@string/google_play_alt</item>
        <item name="android:textColor">@color/color_installed_from_text</item>
    </style>

    <style name="FdroidFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/color_installed_from</item>
        <item name="android:text">@string/fdroid</item>
        <item name="android:textColor">@color/color_installed_from_text</item>
    </style>

    <style name="ApkFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/color_installed_from</item>
        <item name="android:text">@string/apk</item>
        <item name="android:textColor">@color/color_installed_from_text</item>
    </style>

    <style name="SystemDefaultChipTheme" parent="BaseThemeChipStyle">
        <item name="closeIcon">@drawable/ic_theme_system</item>
        <item name="chipIconSize">24dp</item>
        <item name="android:text">@string/follow_system</item>
    </style>

    <style name="LightChipTheme" parent="BaseThemeChipStyle">
        <item name="closeIcon">@drawable/ic_theme_light</item>
        <item name="chipIconSize">24dp</item>
        <item name="android:text">@string/light</item>
    </style>

    <style name="DarkChipTheme" parent="BaseThemeChipStyle">
        <item name="closeIcon">@drawable/ic_theme_dark</item>
        <item name="chipIconSize">24dp</item>
        <item name="android:text">@string/dark</item>
    </style>

    <!--#########################################################################################-->

    <!--Chip like text view themes-->
    <style name="AndroidVersionTextViewTheme" parent="BaseChipLikeTextViewStyle">
        <item name="android:drawableStart">@drawable/ic_android_version</item>
        <item name="android:drawableTint">@color/color_android_version_text</item>
        <item name="backgroundTint">@color/color_android_version</item>
        <item name="android:textColor">@color/color_android_version_text</item>
    </style>

    <style name="InstalledFromTextViewTheme" parent="BaseChipLikeTextViewStyle">
        <item name="android:drawableTint">@color/color_installed_from_text</item>
        <item name="backgroundTint">@color/color_installed_from</item>
        <item name="android:textColor">@color/color_installed_from_text</item>
    </style>

    <!--#########################################################################################-->

    <!--Linear progress indicator themes-->
    <style name="GoldProgressIndicator" parent="BaseProgressIndicatorStyle">
        <item name="indicatorColor">@color/color_gold_status</item>
    </style>

    <style name="SilverProgressIndicator" parent="BaseProgressIndicatorStyle">
        <item name="indicatorColor">@color/color_silver_status</item>
    </style>

    <style name="BronzeProgressIndicator" parent="BaseProgressIndicatorStyle">
        <item name="indicatorColor">@color/color_bronze_status</item>
    </style>

    <style name="BrokenProgressIndicator" parent="BaseProgressIndicatorStyle">
        <item name="indicatorColor">@color/color_broken_status</item>
    </style>

    <!--#########################################################################################-->

    <!--Bottom sheet theme-->
    <style name="BottomSheetTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

</resources>