<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbVertical="@drawable/shape_scrollbar_thumb"
    tools:context=".fragments.details.HelpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_16"
        android:paddingBottom="@dimen/margin_35">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            android:layout_marginBottom="@dimen/margin_20"
            android:text="@string/what_status_mean"
            android:textColor="@color/color_text_title"
            android:textSize="@dimen/text_20"
            style="@style/MediumBoldText"/>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:clickable="false"
            style="@style/NotTestedFilterChipTheme"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_12"
            android:layout_marginBottom="@dimen/margin_16"
            android:text="@string/not_tested_subtitle"
            android:textColor="?attr/colorControlNormal"
            android:textSize="@dimen/text_16" />

        <include layout="@layout/divider_horizontal"/>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_4"
            android:clickable="false"
            style="@style/BrokenFilterChipTheme"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_12"
            android:layout_marginBottom="@dimen/margin_16"
            android:text="@string/broken_subtitle"
            android:textColor="?attr/colorControlNormal"
            android:textSize="@dimen/text_16" />

        <include layout="@layout/divider_horizontal"/>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_4"
            android:clickable="false"
            style="@style/BronzeFilterChipTheme"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_12"
            android:layout_marginBottom="@dimen/margin_16"
            android:text="@string/bronze_subtitle"
            android:textColor="?attr/colorControlNormal"
            android:textSize="@dimen/text_16" />

        <include layout="@layout/divider_horizontal"/>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_4"
            android:clickable="false"
            style="@style/SilverFilterChipTheme"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_12"
            android:layout_marginBottom="@dimen/margin_16"
            android:text="@string/silver_subtitle"
            android:textColor="?attr/colorControlNormal"
            android:textSize="@dimen/text_16" />

        <include layout="@layout/divider_horizontal"/>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_4"
            android:clickable="false"
            style="@style/GoldFilterChipTheme"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_12"
            android:layout_marginBottom="@dimen/margin_16"
            android:text="@string/gold_subtitle"
            android:textColor="?attr/colorControlNormal"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

</ScrollView>