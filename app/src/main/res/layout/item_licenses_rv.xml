<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_8"
    android:layout_marginTop="@dimen/margin_4"
    android:layout_marginBottom="@dimen/margin_8"
    android:backgroundTint="@android:color/transparent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/margin_8"
    android:paddingTop="@dimen/margin_10"
    android:paddingBottom="@dimen/margin_8">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/licenseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_4"
        android:paddingVertical="@dimen/margin_8"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/ktor"
        android:textAlignment="viewStart"
        android:textColor="@color/color_url"
        android:textSize="@dimen/text_18"
        android:drawableEnd="@drawable/ic_open_in_browser"
        android:drawablePadding="@dimen/margin_4"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/licenseDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_4"
        android:paddingStart="@dimen/margin_10"
        android:paddingEnd="@dimen/margin_8"
        android:text="@string/apache_2_0_license"
        android:textColor="?attr/colorOnSurface"
        android:textSize="@dimen/text_16" />

</LinearLayout>

</com.google.android.material.card.MaterialCardView>