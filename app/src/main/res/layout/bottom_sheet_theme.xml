<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_12"
    android:paddingBottom="@dimen/margin_8"
    android:orientation="vertical"
    android:layout_gravity="center">

    <include
        layout="@layout/bottom_sheet_header"/>

        <RadioGroup
            android:id="@+id/theme_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_6.5"
            android:paddingBottom="@dimen/margin_4"
            android:paddingEnd="@dimen/margin_12"
            android:paddingStart="@dimen/margin_16">

            <RadioButton
                android:id="@+id/sys_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_4"
                android:paddingStart="@dimen/margin_8"
                android:paddingEnd="@dimen/margin_8"
                android:checked="true"
                android:button="@drawable/ic_radio_btn"
                android:text="@string/system_default"
                android:textAlignment="viewStart"
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/text_16" />

            <RadioButton
                android:id="@+id/light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_4"
                android:paddingStart="@dimen/margin_8"
                android:paddingEnd="@dimen/margin_8"
                android:button="@drawable/ic_radio_btn"
                android:text="@string/light"
                android:textAlignment="viewStart"
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/text_16" />

            <RadioButton
                android:id="@+id/dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:paddingStart="@dimen/margin_8"
                android:paddingEnd="@dimen/margin_8"
                android:button="@drawable/ic_radio_btn"
                android:text="@string/dark"
                android:textAlignment="viewStart"
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/text_16" />

        </RadioGroup>

    <include layout="@layout/bottom_sheet_footer"/>

</LinearLayout>