<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_12"
    android:paddingBottom="@dimen/margin_8"
    android:layout_gravity="center"
    android:orientation="vertical">

    <include
        layout="@layout/bottom_sheet_header"/>

    <TextView
        android:id="@+id/play_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/margin_20"
        android:paddingTop="@dimen/margin_16"
        android:paddingEnd="@dimen/margin_25"
        android:paddingBottom="@dimen/margin_16"
        android:text="@string/google_play"
        android:textAlignment="viewStart"
        android:textColor="@color/color_text_title"
        android:textSize="@dimen/text_16"
        app:drawableStartCompat="@drawable/ic_google_play"
        android:drawablePadding="@dimen/margin_20"/>

    <TextView
        android:id="@+id/fdroid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2.5"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/margin_20"
        android:paddingTop="@dimen/margin_16"
        android:paddingEnd="@dimen/margin_25"
        android:paddingBottom="@dimen/margin_16"
        android:text="@string/menu_fdroid"
        android:textAlignment="viewStart"
        android:textColor="@color/color_text_title"
        android:textSize="@dimen/text_16"
        app:drawableStartCompat="@drawable/ic_fdroid"
        android:drawablePadding="@dimen/margin_20"/>

    <TextView
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2.5"
        android:layout_marginBottom="@dimen/margin_6.5"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/margin_20"
        android:paddingTop="@dimen/margin_16"
        android:paddingEnd="@dimen/margin_25"
        android:paddingBottom="@dimen/margin_16"
        android:text="@string/menu_share"
        android:textAlignment="viewStart"
        android:textColor="@color/color_text_title"
        android:textSize="@dimen/text_16"
        app:drawableStartCompat="@drawable/ic_share"
        android:drawablePadding="@dimen/margin_20"/>

    <include layout="@layout/bottom_sheet_footer"/>

</LinearLayout>